<%= form_for @game, :html => { :multipart => true } do |f| %>
  <% if @game.errors.any? %>
    <div>
      <%= pluralize(@game.errors.count, "error") %> prevented this game from being submitted:
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "release_date" %><br>
    <%= f.date_field "release_date" %>
  </div>
  <div>
    <%= f.label "developer" %><br>
    <%= f.text_field "developer" %>
  </div>
  <div>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>
