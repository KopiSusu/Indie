<section class='container' id='desc'>
  <article>
    <h3> Find, rate, and share all the indie games that snuck their way into your heart. </h3>
  </article>
</section>

<section class='container' id='games'>

  <% @games.each do |game| %>
    <ul>
      <%= link_to image_tag(game.image.url(:large)), game_path(game) %>
      <h3><%= game.title %></h3>
      <p> "<%= game.description %>" </p>
    </ul>
  <% end %>

</section>